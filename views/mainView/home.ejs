<section id="shop" class="bg-pastel-bgblue row">
    <h2 class="text-center pt-5  fw-bold">Latest Offerings</h2>
    <div class="row d-flex flex-wrap px-3 justify-content-between">
        
        <% for(let product of products) { %>
            <% if(product.listingStatus) { %>
                <div class="col-lg-4">
                    <div class="card w-100 m-3">
                        <img src="<%= product.image %>" class="card-img-top img-fluid h-25" alt='<%= product.name %>''>
                        <div class="card-body">
                          <h5 class="card-title"><%= product.name %></h5>
                          <p class="card-text"><%= product.description %></p>
                          <div class="d-flex justify-content-between align-items-center">
                            <span class="price">&#8377; <%= product.price %></span>
                            <button class="btn btn-success">Add Item</button>
                          </div>
                        </div>
                    </div>
                </div>
            <% } %>
        <% } %>
    </div>
    
</section>


